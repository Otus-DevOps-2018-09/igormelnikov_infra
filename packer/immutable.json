{
	"variables": {
		"project_id": null,
		"machine_type": "g1-small",
		"image_description": "",
		"disk_size": "10",
		"disk_type": "pd-standard",
		"tags": "puma-server",
		"network": "default",
		"preemptible": "true"
	},
	"builders": [
		{
			"type": "googlecompute",
			"project_id": "{{ user `project_id` }}",
			"image_name": "reddit-full-{{timestamp}}",
			"image_description": "{{user `image_description`}}",
			"image_family": "reddit-full",
			"source_image_family": "reddit-base",
			"zone": "europe-west1-b",
			"ssh_username": "appuser",
			"machine_type": "{{user `machine_type`}}",
			"disk_size": "{{user `disk_size`}}",
			"disk_type": "{{user `disk_type`}}",
			"tags": "{{user `tags`}}",
			"network": "{{user `network`}}",
			"preemptible": "{{user `preemptible`}}"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"script": "packer/scripts/deploy.sh",
			"execute_command": "sudo -u appuser {{.Path}}"
		},
		{
			"type": "file",
			"source": "packer/files/puma.service",
			"destination": "/home/appuser/"
		},
		{
			"type": "shell",
			"inline": [
				"sudo mv /home/appuser/puma.service /lib/systemd/system/",
				"sudo systemctl enable puma"
			]
		}
	]
}
